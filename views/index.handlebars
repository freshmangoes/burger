<div class="container">
  <div class="jumbotron text-center bg-dark text-light">
    <h1>Burgers!</h1>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card bg-dark text-light border-success p-2">
        <div class="card-title">
          <h2 class="text-center">Plate!</h2>
        </div>
        <ul class="text-left list-group active">
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>


    <div class="col-md-6">
      <div class="card bg-dark text-light border-success p-2">
        <div class="card-title">
          <h2 class="text-center">Down the hatch!</h2>
        </div>  
        <ul class="text-left list-group">
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <br>
  <br>

  <div class="row p-5">
    <div class="col-12">
      <div class="card bg-dark text-light border-success p-3">
      <h2>Add a burger!</h2>
      <form>

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input class="form-control bg-dark text-light" type="text" id="ca" name="burger_name">
        </div>

        <button class="btn btn-outline-primary" type="submit">add burger</button>
      </form>
      </div>
    </div>
  </div>
</div>

